{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "types": ["node"],
    "allowJs": true
  },
  "include": [
    "../src/**/*.stories.ts",
    "../src/**/*.stories.tsx",
    "../src/**/*.stories.js",
    "../src/**/*.stories.jsx",
    "../src/**/*.ts",
    "../src/**/*.tsx"
  ],
  "exclude": ["../node_modules"]
}
