{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "src",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./build",
    "incremental": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx",
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "dist-storybook", "build", "**/*.js", "**.config.js", "**/*.test.*", "**/*.stories.*"]
}
